extends layout
block variables
	- var body_class = 'gray_bg'
block content
	section.login-section
		.container.container--login
			h1.login-h1 Welcome back
			.login-sub-heading Log in to your account
			.login-block
				.login-block__pic
					img(src="new/images/login-pic.png", alt="")
				form.login-block__form

					label.input-text-wrap.input-text-wrap--gray
						input.textinp.textinp--gray(required type="text", name="")
						.input-text-pic
							svg(width='24' height='24' viewbox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg')
								path(d='M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z' stroke='#A5B1C2' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
								path(d='M22 6L12 13L2 6' stroke='#A5B1C2' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
						span.textinp-top-placeholder Email Address


					label.input-text-wrap.input-text-wrap--gray
						input.textinp.textinp--gray(required type="text", name="")
						.input-text-pic
							svg(width='22' height='22' viewbox='0 0 22 22' fill='none' xmlns='http://www.w3.org/2000/svg')
								path(d='M14.4998 6.5L17.9998 3M19.9998 1L17.9998 3L19.9998 1ZM10.3898 10.61C10.9061 11.1195 11.3166 11.726 11.5975 12.3948C11.8785 13.0635 12.0244 13.7813 12.0268 14.5066C12.0292 15.232 11.8882 15.9507 11.6117 16.6213C11.3352 17.2919 10.9288 17.9012 10.4159 18.4141C9.90302 18.9271 9.29371 19.3334 8.62309 19.6099C7.95247 19.8864 7.23379 20.0275 6.50842 20.025C5.78305 20.0226 5.06533 19.8767 4.39658 19.5958C3.72782 19.3148 3.12125 18.9043 2.61179 18.388C1.60992 17.3507 1.05555 15.9614 1.06808 14.5193C1.08061 13.0772 1.65904 11.6977 2.67878 10.678C3.69853 9.65825 5.078 9.07982 6.52008 9.06729C7.96216 9.05476 9.35147 9.60913 10.3888 10.611L10.3898 10.61ZM10.3898 10.61L14.4998 6.5L10.3898 10.61ZM14.4998 6.5L17.4998 9.5L20.9998 6L17.9998 3L14.4998 6.5Z' stroke='#A5B1C2' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')

						span.textinp-top-placeholder Password

					a.login-forgot-pass(href="") Forgot Password?

					.login-btn-wrap
						button.btn.login-btn Login

					.login-create-acc
						span Don’t have an account?
						a.login-create-acc__link(href="")  Create one


			.after-login-block
				a.after-login-block__link(href="") Test Your Video Capabilities
				span.after-login-block__separator  •
				a.after-login-block__link(href="")  Informed Patient Consent

