extends layout
block variables
  - var body_class = 'white-bg'
  - var baseHeader = true
block content
  section.as-1(style="background-image:url(/new/images/about-img-1.jpg);")
    header.header.container.white-header
      .header__inner
        a.header__logo(href="/")
          img(src="/new/images/logo-white.svg" alt="logo")
        .header__navigation
          nav.header__menu
            a.active(href="") About
            a(href="") Help Center
            a(href="") Pricing
            a(href="") Contact
          .header__btns
            a.btn-small Get Started
            a.header__login.svg-link--stroke
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H15" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M10 17L15 12L10 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M15 12H3" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              | Login

    .container.as-1__content
        .as-1__subtitle.center By real people. for real People.
        .as-1__title.h1.center You deserve transparent <br>and reliable health care

  section.as-2.container
    .as-2__video
      video(poster="/new/images/video-bg.png" )
        source(src="//s3.us-east-2.amazonaws.com/livemedconnect/video-home.webm" type="video/webm")
        source(src="images/video-home.mp4" type="video/mp4")
        | Your browser does not support HTML5 video.
      .h-section-3__video-btn
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M6 3L20 12L6 21V3Z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    .as-2__text.center.p Our philosophy is that everyone should have access to the healthcare they need. LiveMedConnect has developed innovative technology to make healthcare work for you. We’ve made it easier than ever to provide telemedicine solutions to patients. By making tele doc services simpler and more affordable, all patients regardless of geography, can get the care that they need when they need it most.

  section.as-3.container
    .as-3__inner
      .as-3__content
        .as-3__item
          .as-3__title.h1 20 million
          .as-3__text.p 20 million people in the United States live in areas that have a shortage of physicians to meet their basic health care needs.
        .as-3__item
          .as-3__title.h1 84%
          .as-3__text.p About 84% of surveyed healthcare executives felt that the development of telemedicine services are important to their organizations.
        .as-3__item
          .as-3__title.h1 100%
          .as-3__text.p A study of the outcomes of care for 8,000 patients who used telemedicine services found no difference between the virtual appointment and an in-person office visit.

  section.as-4.container
    .as-4__inner
      .as-4__content
        .as-4__title.h2.center We cover virtually <br>everything
        .as-4__flex
          .as-4__item
            .as-4__image
              img(src="/new/images/icon-about-bookmark.svg" alt="")
            .as-4__text Everyday Care
          .as-4__item
            .as-4__image
              img(src="/new/images/icon-about-users.svg" alt="")
            .as-4__text Children & Family
          .as-4__item
            .as-4__image
              img(src="/new/images/icon-about-lock.svg" alt="")
            .as-4__text Mental Health
          .as-4__item
            .as-4__image
              img(src="/new/images/icon-about-message.svg" alt="")
            .as-4__text Dermatology
          .as-4__item
            .as-4__image
              img(src="/new/images/icon-about-smartphone.svg" alt="")
            .as-4__text Nutrition
          .as-4__item
            .as-4__image
              img(src="/new/images/icon-about-user.svg" alt="")
            .as-4__text Expert Opinion

  section.as-5.container
    .as-5__inner
      .as-5__content
        .as-5__title.h2.center Telemedicine that won’t break the bank
        .as-5__subtitle.center Choose a monthly plan
        .as-5__plans.plans
          .plan
            .plan__title.plan__title--blue
              img(src="/new/images/icon-plan-individual.svg" alt="")
              | Individual plan
            .plan__price
              span.h3 $24.95/mo
            .plan__text.p.center Consultations <br>for One
            .plan__btn.btn-small Select This Monthly Plan
          .plan
            .plan__title.plan__title--green
              img(src="/new/images/icon-plan-individual.svg" alt="")
              | Family plan
            .plan__price
              span.red.h4 $39.95
              span.h3 $29.95/mo
            .plan__text.p.center Consultations for Family <br>up to 5 Members
            .plan__btn.btn-small Select This Monthly Plan
        .as-5__list.checklist
          .checklist__item Unlimited Medical Consultations — 24/7/365 Nationwide Doctor Access
          .checklist__item Prescriptions sent to pharmacy of choice electronically*
          .checklist__item Mental Health Specialists 24/7/365 Access to Master Level Therapist
          .checklist__item Care Navigation Advocates
          .checklist__item Message a Specialist — Consult with specialist via Secure Messaging

  section.as-6.container
    .as-6__inner(style="background-image:url(/new/images/about-img-2.jpg);")
      .as-6__content
        .as-6__title.h2 Connect with a live doctor when you need it most
        .as-6__btn.btn.invert Connect with a Doctor